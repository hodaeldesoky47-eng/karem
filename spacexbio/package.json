{
  "name": "spacexbio",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "setup": "python -m pip install --upgrade pip && pip install -r backend/requirements.txt && npm --prefix frontend install --legacy-peer-deps",
    "start:backend": "uvicorn backend.app.main:app --host 0.0.0.0 --port 8000",
    "start:backend:dev": "uvicorn backend.app.main:app --reload --port 8000",
    "start:frontend": "npm --prefix frontend run start",
    "dev:frontend": "npm --prefix frontend run dev",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run start:backend:dev\"",
    "build:frontend": "npm --prefix frontend run build",
    "test:backend": "pytest -q",
    "test:frontend": "npm --prefix frontend test -- --watchAll=false"
  },
  "devDependencies": {
    "concurrently": "8.2.2"
  }
}

